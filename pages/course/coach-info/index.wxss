.coach-info {
    --td-swiper-radius:0;
    --td-swiper-nav-dot-active-color:var(--theme-color);
    --td-swiper-nav-dot-color:rgba(255, 255, 255, 0.50);
}
.coach-info-bottom {
  padding: 40rpx 32rpx;
}

.coach-backgounrd{
    width: 100%;
    height: 750rpx;
}

.coach-info-avatar {
  display: flex;
  align-items: center;
}
.coach-info-avatar image {
  height: 128rpx;
  width: 128rpx;
  border-radius: 50%;
  margin-right: 32rpx;
}
.coach-info-name {
  font-size: 32rpx;
  color: var(--black-color);
}

.coach-info-detail {
  margin: 64rpx 0 16rpx;
  color: var(--black-color);
  font-size: 32rpx;
  font-weight: 500;
  line-height: 48rpx;
}

.coach-info-description {
  color: #040000;
  font-size: 28rpx;
  line-height: 44rpx;
}
