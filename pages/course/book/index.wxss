.contaioner {
    /* background-color: aqua; */
    color: #282825;
    font-size: 28rpx;
    font-weight: 400;
}

.header {
    height: 332rpx;
    width: 100%;
    flex-shrink: 0;
    background-color: aqua;
    position: relative;
    z-index: 1;
}

.header-bg {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background-color: lightgray;
    overflow: hidden;
}

.course-detail {
    display: flex;
    padding: 40rpx 32rpx;
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
    border-radius: 32rpx 32rpx 0 0;
    background: #FFF;
    margin-top: -90rpx;
    position: relative;
    z-index: 2;
}

.title {
    font-size: 40rpx;
    font-weight: 600;
}

.book-info {
    margin-top: 8rpx;
    color: #71716F;
    line-height: 40rpx;
}

.coach-info {
    align-items: center;
    display: flex;
    margin: 32rpx 0;

}

.coach-avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    margin-right: 32rpx;
}

.coach-name {
    display: inline-block;
    font-size: 32rpx;
    font-weight: 500;
    /* margin-top: 12rpx; */
    height: 48rpx;
    margin-bottom: 8rpx;
}

.coach-info-right {
    /* width: 100%; */
    display: flex;
    justify-content: space-between;
    flex-direction: column;
}

.ohter-coach {
    display: inline-block;
    color: #71716F;
    font-size: 24rpx;
    height: 36rpx;
}

.arrow-right {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    right: 32rpx;
    margin-top: 50rpx;
}

.flex-row {
    display: flex;
    align-items: center;
    line-height: 40rpx;
    /* height: 40rpx; */
}

.icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 16rpx;
}

.time-info {
    border-top: 2rpx solid #F9F6F2;
    padding-top: 32rpx;
    margin-bottom: 16rpx;

}

.address-info {
    width: 100%;
    justify-content: space-between;
    padding-bottom: 32rpx;
    border-bottom: 2rpx solid #F9F6F2;
}

.map-info {
    font-weight: 500;
}

.course-desc {
    line-height: 48rpx;
    padding-top: 32rpx;

}

.course-desc-title {
    font-size: 32rpx;
    font-weight: 500;
    line-height: 48rpx;
    margin-bottom: 16rpx;
}

.course-desc-detail {
    overflow: hidden;
    color: #040000;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    align-self: stretch;
    text-overflow: ellipsis;
    font-family: PingFang SC;
    font-style: normal;
    line-height: 44rpx;
}
.bottom-contaioner{
    display: flex;
    padding: 0 32rpx;
    justify-content: space-between;
    width: calc(100% - 64rpx);
}

.display-absolute{
    position: absolute;
    bottom: 40rpx;
}

.btn {
    /* display: block; */
    width: 100%;
    font-size: 32rpx;
    height: 96rpx;
    font-style: normal;
    line-height: 96rpx;
    font-weight: 500;
    border-radius: 12rpx;
    
}

.btn:nth-child(even){
    margin-left: 32rpx;
}

.btn-borde-rnone::after {
    border: none;
}

.btn-disabled{
    color: #FFF !important;
    background-color: #AEAEAB !important;
}
.cancel-btn{
    border: 1px solid #AEAEAB;
    background: #FFF;
}
.confirm-btn{
    background-color:#C8D67A;
}

.reconfrom-container{
    padding: 40rpx 32rpx;
    flex-direction: column;
    border-radius: 32rpx 32rpx 0 0;
    background: #FFF;
}

.reconfrom-body{
    flex-direction: column;
    justify-content: flex-end;
    align-items: flex-start;
}


.time-info1{
    margin-top: 32rpx;
    margin-bottom: 16rpx;
}
.address-info1{
    margin-top: 16rpx;
    padding-bottom: 32rpx;
    border-bottom: 2rpx solid #F9F6F2;
}

.no-card{
    display: inline-block;
    padding: 32rpx 0;
    color:#040000;
}

.confirm-bottom-contaioner{
    width: 100%;
    padding: 0;
}
