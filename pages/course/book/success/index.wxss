.succ-container {
  margin: 40rpx;
  color: #282825;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  border-radius: 16rpx;
  box-shadow: 0px 8rpx 16rpx 0px rgba(59, 104, 96, 0.10);
  /* 142.857% */
}
.succ-info{
  display: flex;
  padding: 32rpx 40rpx;
}
.success-icon {
  width: 56rpx;
  height: 56rpx;
}

.succ-title {
  margin-left: 16rpx;
  color: #191919;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 56rpx;
}

.header {
  height: 368rpx;
  width: 100%;
  flex-shrink: 0;
  background-color: aqua;
  /* position: relative; */
  z-index: 1;
}

.header-bg {
  width: 100%;
  height: 100%;
  object-fit: cover;
  background-color: lightgray;
  overflow: hidden;
}

.course-detail{
  padding: 40rpx;
}

.detail{
  margin-bottom: 24rpx;
}
.course-desc{
  padding-top: 24rpx;
  border-top: 2rpx solid #F9F6F2;
  color: #AEAEAB;
  line-height: 52rpx;
}

.bottom-contaioner {
  display: flex;
  padding: 0 32rpx;
  justify-content: space-between;
  width: calc(100% - 64rpx);
}

.display-absolute {
  position: absolute;
  bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.btn {
  /* display: block; */
  width: 100%;
  font-size: 32rpx;
  height: 96rpx;
  font-style: normal;
  line-height: 96rpx;
  font-weight: 500;
  border-radius: 12rpx;

}

.btn:nth-child(even) {
  margin-left: 32rpx;
}

.btn-borde-rnone::after {
  border: none;
}

.btn-disabled {
  color: #FFF !important;
  background-color: #AEAEAB !important;
}

.cancel-btn {
  border: 1px solid #AEAEAB;
  background: #FFF;
}

.confirm-btn {
  background-color: #C8D67A;
}