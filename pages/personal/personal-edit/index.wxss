}
.avatar-wrapper {
    padding: 0;
    width: 140rpx !important;
    border-radius: 8px;
    border-radius: 50%;
    margin-top: 48rpx;
    margin-bottom: 16rpx;

}

.avatar {
    display: block;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
}

.name {
    text-align: center;
}

.container {
    display: block;
    --td-input-label-min-width: 172rpx;
