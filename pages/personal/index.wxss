/* pages/personal/index.wxss */
.personal{
    background: url(https://mellow-1321738484.cos.ap-shanghai.myqcloud.com/public/miniapp_profile_background.jpeg);
    padding: 224rpx 32rpx 0;
    display: block;
}

.personal-info{
    display: flex;
    align-items: center;
    margin-bottom: 48rpx;
    color: #fff;
}
.personal-edit{
    width: 72rpx;
    height: 72rpx;
}

.personal-logo{
    width: 100%;
}

.personal-info-avatar{
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    margin-right: 32rpx;
    margin-left: 32rpx;
}

.personal-edit{
    margin-left: auto;
}
.personal-center{
    border-radius: 24rpx;
    overflow: hidden;
    --td-cell-border-right-space:32rpx;
    --td-cell-right-icon-color:#282825;
}

.personal-item{
    display: flex;
    align-items: center;
}

.personal-item-img{
    width: 40rpx;
    height: 40rpx;
    
}

.personal-bottom{
    height: 50rpx;
}