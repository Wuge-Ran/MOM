.container {
  padding: 120rpx 0rpx 0px 0rpx;
  justify-content: flex-start;
  color: #282825;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.success-icon {
  width: 128rpx;
  height: 128rpx;

}

.succ-title {
  margin: 16rpx 0 325rpx 0;
  color: #191919;
  font-size: 32rpx;
  font-weight: 600;
}

.succ-card {
  transform: scale(1.72);
}

.card-container {
  display: inline-block;
  /* margin: 0 32rpx; */
  position: relative;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 32rpx;
  color: #000;
  width: 400rpx;
  height: 240rpx;
}

.card-bg {
  width: 400rpx;
  height: 240rpx;
  position: absolute;
}

.card-event {
  position: absolute;
  width: 68rpx;
  height: 68rpx;
  top: 26rpx;
  right: 20rpx;
  /* margin-right: 230rpx; */
}

.card-info {
  position: relative;
  /* background: #AEAEAB; */
  /* margin-top: -240rpx; */
  height: 220rpx;
  /* display: flex; */
  /* flex-direction: column; */
  text-align: center;
  padding: 6rpx 0;
}

.hint {
  position: absolute;
  color: #71716F;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 20rpx;
  bottom: 8rpx;
  left: 8rpx;
  transform: scale(0.5);
  transform-origin: left bottom;
}

.card-title {
  /* max-width: 254rpx; */
  color: #3B3B3B;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 20rpx;
}

.card-times {
  color: #595953;
  font-size: 96rpx;
  font-style: normal;
  font-weight: 500;
  /* margin-top: 20rpx; */
  line-height: 140rpx;

}

.card-times-sufix {
  color: #71716F;
  display: inline-block;
  font-size: 18rpx;
  line-height: 24rpx;
  /* margin-bottom: 14rpx; */
}

.price-info {
  /* position: relative; */
  /* bottom: 12rpx; */
  color: #3B3B3B;
  font-size: 32rpx;
  font-style: normal;
  /* margin-left: 150rpx; */
  font-weight: 400;
  line-height: 58rpx;
}

.price {
  font-size: 32rpx;
  font-weight: 500;
  color: #595953;
  /* line-height: 48rpx; */
}

.per-price {
  color: #71716F;
  display: inline-block;
  text-align: right;
  font-size: 20rpx;
  font-style: normal;
  font-weight: 400;
  line-height: 24rpx;
  margin-left: 6rpx;
  /* 150% */
  text-decoration: line-through;
}


.group-per-price {
  color: #A7A9AC !important;
}

.group-price {
  color: #FFF !important;
}

.group-card-title {
  color: #FFF;
}

.group-hint {
  color: #FFF;
}

.pos-limits {
  font-size: 12rpx;
  line-height: 18rpx;
  /* 150% */
  letter-spacing: 1.2rpx;
}

.succ-desc {
  width: calc(100% - 26rpx);
  margin: 117rpx 0 32rpx 26rpx;
  display: flex;
  justify-content: flex-start;
  flex-direction: column;
}

.buy-title {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 56rpx;
  margin-bottom: 16rpx;
}

.user-limit {
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  /* 142.857% */
}

.card-root{
  position: absolute;
  bottom: 172rpx;
}

.bottom-contaioner {
  display: flex;
  padding: 0 32rpx;
  justify-content: space-between;
  width: calc(100% - 64rpx);
}

.display-absolute {
  position: absolute;
  bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.btn {
  /* display: block; */
  width: 100%;
  font-size: 32rpx;
  height: 96rpx;
  font-style: normal;
  line-height: 96rpx;
  font-weight: 500;
  border-radius: 12rpx;

}

.btn:nth-child(even) {
  margin-left: 32rpx;
}

.btn-borde-rnone::after {
  border: none;
}

.btn-disabled {
  color: #FFF !important;
  background-color: #AEAEAB !important;
}

.cancel-btn {
  border: 1px solid #AEAEAB;
  background: #FFF;
}

.confirm-btn {
  background-color: #C8D67A;
}