.container {
  padding: 120rpx 32rpx 0px 32rpx;
  justify-content: flex-start;
  color: #282825;
}

.success-icon {
  width: 128rpx;
  height: 128rpx;

}

.succ-title {
  margin: 16rpx 0 325rpx 0;
  color: #191919;
  font-size: 32rpx;
  font-weight: 600;
}

.succ-card {
  transform: scale(1.72);
}

.card-container {
  display: inline-block;
  margin: 0 32rpx;
  position: relative;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 32rpx;
  color: #000;
  width: 400rpx;
  height: 240rpx;
}

.card-bg {
  width: 100%;
  height: 100%;
}

.card-event {
  position: absolute;
  width: 73rpx;
  height: 73rpx;
  top: 23rpx;
  right: 23rpx;
  /* margin-right: 230rpx; */
}

.card-info {
  /* position: absolute; */
  margin-top: -240rpx;
  padding: 20rpx 16rpx 0rpx 20rpx;

}

.card-title {
  max-width: 254rpx;
  word-wrap: break-word;
}

.card-times {
  position: absolute;
  bottom: 0rpx;
  font-size: 100rpx;
  font-style: normal;
  font-weight: 500;
  line-height: 112rpx;
  letter-spacing: -5rpx;
  z-index: 100;
}

.card-times-sufix {
  display: inline-block;
  font-size: 20rpx;
  line-height: 32rpx;
  letter-spacing: -1rpx;
  margin-bottom: 14rpx;
}

.price-info {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  bottom: 16rpx;
  right: 16rpx;
}

.price {
  font-size: 32rpx;
  font-weight: 500;
  line-height: 48rpx;
}

.per-price {
  color: #75855E;
  font-size: 12rpx;
  font-weight: 700;
  line-height: 18rpx;
  /* 150% */
  letter-spacing: 1.2rpx;
}

.pos-limits {
  font-size: 12rpx;
  line-height: 18rpx;
  /* 150% */
  letter-spacing: 1.2rpx;
}

.succ-desc {
  width: 100%;
  margin: 117rpx 0 32rpx 26rpx;
  display: flex;
  flex-direction: column;
}

.buy-title {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 56rpx;
  margin-bottom: 16rpx;
}

.user-limit {
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  /* 142.857% */
}

.card-root{
  position: absolute;
  bottom: 172rpx;
}

.bottom-contaioner {
  display: flex;
  padding: 0 32rpx;
  justify-content: space-between;
  width: calc(100% - 64rpx);
}

.display-absolute {
  position: absolute;
  bottom: 40rpx;
}

.btn {
  /* display: block; */
  width: 100%;
  font-size: 32rpx;
  height: 96rpx;
  font-style: normal;
  line-height: 96rpx;
  font-weight: 500;
  border-radius: 12rpx;

}

.btn:nth-child(even) {
  margin-left: 32rpx;
}

.btn-borde-rnone::after {
  border: none;
}

.btn-disabled {
  color: #FFF !important;
  background-color: #AEAEAB !important;
}

.cancel-btn {
  border: 1px solid #AEAEAB;
  background: #FFF;
}

.confirm-btn {
  background-color: #C8D67A;
}