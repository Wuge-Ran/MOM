.content{
  padding-bottom:28rpx ;
}
.cards-container {
  margin-bottom: 28rpx;
  font-family: Source Sans Pro;
}

.title {
  color: #1A1A1A;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 40rpx;
  margin: 28rpx 0 24rpx 32rpx;
}

.scroll-view {
  width: 100%;
  white-space: nowrap;
}

.card-container {
  display: inline-block;
  margin: 0 32rpx;
  position: relative;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 32rpx;
  color: #000;
  width: 400rpx;
  height: 240rpx;
}

.card-bg {
  width: 400rpx;
  height: 240rpx;
  position: absolute;
}

.card-event {
  position: absolute;
  width: 68rpx;
  height: 68rpx;
  top: 26rpx;
  right: 20rpx;
  /* margin-right: 230rpx; */
}

.card-info {
  position: relative;
  /* background: #AEAEAB; */
  /* margin-top: -240rpx; */
  height: 220rpx;
  /* display: flex; */
  /* flex-direction: column; */
  text-align: center;
  padding: 6rpx 0;
}

.hint {
  position: absolute;
  color: #71716F;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 20rpx;
  bottom: 8rpx;
  left: 8rpx;
  transform: scale(0.5);
  transform-origin: left bottom;
}

.card-title {
  /* max-width: 254rpx; */
  color: #3B3B3B;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 20rpx;
}

.card-times {
  color: #595953;
  font-size: 96rpx;
  font-style: normal;
  font-weight: 500;
  /* margin-top: 20rpx; */
  line-height: 140rpx;

}

.card-times-sufix {
  color: #71716F;
  display: inline-block;
  font-size: 18rpx;
  line-height: 24rpx;
  /* margin-bottom: 14rpx; */
}

.price-info {
  /* position: relative; */
  /* bottom: 12rpx; */
  color: #3B3B3B;
  font-size: 32rpx;
  font-style: normal;
  /* margin-left: 150rpx; */
  font-weight: 400;
  line-height: 58rpx;
}

.price {
  font-size: 32rpx;
  font-weight: 500;
  color: #595953;
  /* line-height: 48rpx; */
}

.per-price {
  color: #71716F;
  display: inline-block;
  text-align: right;
  font-size: 20rpx;
  font-style: normal;
  font-weight: 400;
  line-height: 24rpx;
  margin-left: 6rpx;
  /* 150% */
  text-decoration: line-through;
}


.group-per-price {
  color: #A7A9AC !important;
}

.group-price {
  color: #FFF !important;
}

.group-card-title {
  color: #FFF;
}

.group-hint {
  color: #FFF;
}

.pos-limits {
  font-size: 12rpx;
  line-height: 18rpx;
  /* 150% */
  letter-spacing: 1.2rpx;
}



.reconfrom-container {
  color: #282825;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  padding: 40rpx 32rpx 40rpx 32rpx;
  border-radius: 32rpx 32rpx 0 0;
}

.flex-cloumn {
  display: flex;
  flex-direction: column;
}

.flex-row {
  display: flex;
  justify-content: space-between;
}

.buy-title {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 56rpx;
  margin-bottom: 32rpx;
}

.price-origin {
  display: inline-block;
  color: #AEAEAB;
  margin-left: 16rpx;
  line-height: 40rpx;
  text-decoration: line-through;
  margin-bottom: 16rpx;
}

.limits {
  margin-top: 16rpx;
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid #F9F6F2;
  line-height: 40rpx;
}

.privacy {
  margin: 32rpx 0;
}

.privacy-btn {
  color: #B4CC2B;
}

.no-card {
  margin: 32rpx 0;
}

checkbox .wx-checkbox-input {
  width: 28rpx;
  height: 28rpx;
  margin-top: -4rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #C8D67A;
  border-color: #FFFFFF;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 20rpx;
  height: 20rpx;
  line-height: 24rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
}

.btn {
  /* display: block; */
  width: 100%;
  font-size: 32rpx;
  height: 96rpx;
  font-style: normal;
  line-height: 96rpx;
  font-weight: 500;
  border-radius: 12rpx;

}



.btn-borde-rnone::after {
  border: none;
}

.btn-disabled {
  color: #FFF !important;
  background-color: #AEAEAB !important;
}

.confirm-btn {
  background-color: #C8D67A;
}