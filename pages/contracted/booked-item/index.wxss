.flex-col {
    display: flex;
    justify-content: center;
    flex-direction: column;

}

.flex-row {
    display: flex;
    justify-content: center;
}
.container{
  position: relative;
}
.course-item-container {
    /* position: relative; */
    justify-content: space-between;
    align-items: center;
    font-size: 32rpx;
    font-weight: 500;
    color: var(--black-color);
    padding: 24rpx 32rpx ;
    border-bottom: 1px solid var(--neutral-color1);
}

.course-coach {
    align-items: center;
}

.coach-info {
    /* position: relative; */
    align-items: center;
    padding-right: 32rpx;
    /* line-height: 140rpx; */
    border-right: 1px solid var(--neutral-color1);
}

.coach-avatar {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;

}

.coach-name {
    /* position: absolute;
    margin-top: 180rpx; */
    font-size: 24rpx;
    font-weight: 400;
    color: var(--neutral-color4);
    margin-top: 12rpx;
    /* line-height: 36rpx;
    height: 36rpx; */
    /* left: 0; */
}

.course-info {
    margin-top: -40rpx;
    /* align-items:start; */
    margin-left: 32rpx;
}

.course-name {
    height: 48rpx;
    line-height: 48rpx;
    margin-bottom: 12rpx;
    max-width: 330rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    /* font-weight: 500; */
}

.course-time {
    height: 44rpx;
    line-height: 44rpx;
    color: #7D8E64;
    font-weight: 600;
    font-feature-settings: 'clig' off, 'liga' off;
}

.course-status {
    margin-top: -40rpx;
    align-items: center;
}

.btn {
    font-size: 28rpx;
    width: 148rpx;
    height: 72rpx;
    font-style: normal;
    line-height: 72rpx;
    font-weight: 500;
    border-radius: 16rpx;
    background-color:#C8D67A
}

.btn-borde-rnone::after {
    border: none;
}

.book-str {
    margin-top: 8rpx;
    color: #71716F;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: 18px;
}

.completed {
  color: #FFF !important;
  background-color: #AEAEAB !important;
}

.checkin {
  border: 1px solid #AEAEAB;
  background: #FFF;
}