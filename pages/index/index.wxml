<!--index.wxml-->
<view class="container">
    <view class="swiper-box">
        <t-swiper class="swiper-img" autoplay="{{true}}" interval="{{10000}}" height="100vh" navigation="{{ { type: 'dots' } }}" list="{{swiperList}}"> t-class-nav="card-theme-nav"
        </t-swiper>
    </view>
    <view class="userinfo">
        <view class="userinfo-login" bindtap="bindInfoTap">
            <image  class="userinfo-avatar" src="{{userInfo.avatarUrl||'./img/default.png'}}" mode="cover"></image>
            <text class="userinfo-nickname">{{userInfo.nickName||'您好请登录'}}</text>
            <!-- <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber">登录</button> -->
        </view>
    </view>
    <view class="usermotto">
    </view>
</view>