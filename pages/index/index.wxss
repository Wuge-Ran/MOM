/**index.wxss**/
.container{
    /* background: url('./img/bg.png'); */
    position: relative;
    font-size: 28rpx;
}
.t-swiper-host {
    width: 100vw;
    border-radius: 0 !important;
}
.t-swiper-nav{
    top: 32%;
    --td-swiper-radius: 0;
    --td-swiper-item-padding: 0 12rpx;
    --td-swiper-nav-dot-active-color: #C8D67A;
}


.userinfo {
  position: absolute;
  display: flex;
  flex-direction: column;
  background-color: rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(5px);
  width: 100%;
  bottom: 112rpx;
  padding: 28rpx;
  box-sizing: border-box;
}
.userinfo-nickname{
    color: #ffffff;
    font-size: 28rpx;
}


.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.userinfo-logo{
    display: flex;
    align-items: center;
}

.userinfo-avatar{
    width: 39px;
    height: 39px;
}

.userinfo-content{
    display: flex;
}

.userinfo-content button{
    width: 296rpx;
    line-height: 72rpx;
    font-size: 28rpx;
}

.userinfo-content image{
    width: 136rpx;
    height: 136rpx;
}

.userinfo-content-item{
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-aboutUs{
    height: 120rpx;
    background-color: #F9F6F2;
    display: flex;
    align-items: center;
    border-radius: 24rpx;
    padding: 0 32rpx;
    margin-top: 32rpx;
}

.userinfo-aboutUs-img{
    width: 276rpx;
    height: 64rpx;
    margin-right: auto;
}

.userinfo-aboutUs-btn{
    width: 72rpx;
    height: 72rpx;
}

.userinfo-aboutUs-text{
    margin-right: 32rpx;
    /* margin-left: auto; */
}

.userinfo-description{
    background-color: #F9F6F2;
    border-radius: 24rpx;
    display: flex;
    padding: 24rpx 0 ;
    margin-top: 32rpx;
}
.border-right{
  border-right: 1px solid #DBD9D8;
}

.description-item{
    width: 50%;
}

.description-item-title{
    margin-left: 40rpx;
}

.description-item-number{
    color: #B4CC2B;
    font-size: 80rpx;
}
.description-item-content{
    display: flex;
    justify-content: center;
    align-items: baseline;
}
.description-item-unit{
    color: #AEAEAB;
    margin-left: 4rpx;
    font-size: 24rpx;
}

.my-course{
    margin-top: 32rpx;
}

.my-course-title{
    color: #ffffff;
    margin-bottom: 24rpx;
}

.my-course-content{
    background-color: #F9F6F2;
    border-radius: 24rpx;
    display: flex;
    padding: 24rpx 32rpx ;
}

.course-avatar{
    width: 140rpx;
    height: 140rpx;
    margin-right: 32rpx;
}

.my-course-content-title{
    font-weight: 500;
}