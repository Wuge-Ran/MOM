/**app.wxss**/
.container {
  width: 100vw;
  /*设置tabbar高度+ios安全距离，防止被覆盖 */
  height:  calc(100vh - var(--bottom-safe-height));
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow-y: scroll;
}

button {
  background-color: --theme-color;
}

page {
  font-family: PingFang SC;
  --light-color: #FFFFFF;
  --black-color: #282825;
  --theme-color: #C8D67A;
  --sub-color1: #FF7F52;
  --sub-color2: #7D8E64;
  --sub-color3: #EC5B6C;
  --neutral-color1: #F9F6F2;
  --neutral-color2: #DBD9D8;
  --neutral-color3: #AEAEAB;
  --neutral-color4: #71716F;
  --neutral-color5: #3C3C3C;
  --td-toast-radius: 16rpx;
  --td-toast-bg-color: rgba(0, 0, 0, 0.72);
  --td-popup-border-radius: 24rpx;

  /*设置tabbar高度+ios安全距离，防止被覆盖 */
  --bottom-safe-height: calc(140rpx + env(safe-area-inset-bottom));
  /* --bottom-safe-height: 0rpx; */
  /* padding-bottom: var(--bottom-safe-height); */
}